<% if @user_or_book == "1" %>
	<h2>Users search for "<%= @search_value %>"</h2>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 35, 35, fallback: "no-image-mini.jpg" %>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% elsif @user_or_book == "2" %>
	<h2>Books search for "<%= @search_value %>"</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image, :fill, 35, 35, fallback: "no-image-mini.jpg" %>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>